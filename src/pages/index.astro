<style>
  :root {
    --text-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
    --link-gradient: linear-gradient(-120deg, #642b73, #c6426e);
  }

  h1 {
    margin: 2rem 0;
    line-height: 1.05;
    margin-top: 10vh;
    margin-bottom: 4vh;
  }

  @media (max-width: 767px) {
    h1 {
      margin-top: 3vh;
      margin-bottom: 3vh;
    }
  }

  header {
    margin: auto;
    padding: 1em;
    max-width: 80ch;
  }

  header p {
    line-height: 1.45;
    max-width: 56ch;
  }

  main {
    margin: auto;
    padding: 1em;
    width: 1200px;
    max-width: 90vw;
  }

  .text-gradient {
    font-weight: 900;
    background-image: var(--text-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    border-radius: 0.4rem;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      background-position-y: 0%;
    }

    50% {
      background-position-y: 80%;
    }
  }

  ul {
    list-style: none;
    margin-left: 0;
    margin-top: 0;
    font-size: 1.8em;
    padding-left: 0;
  }

  @media (min-width: 768px) {
    ul {
      padding-left: 0em;
    }

    ul > li:before {
      display: inline-block;
      content: "-";
      width: 0.75em;
      margin-left: -1em;
    }
  }

  small {
    margin-left: 0.5em;
    font-size: 0.5em;
    display: inline-block;
    background-color: rgba(255, 255, 255, 0.15);
    border-radius: 30px;
    padding: 0.2em 0.7em;
    vertical-align: top;
    position: relative;
    top: 0.3em;
  }

  ul {
    margin: 0;
    padding: 0;
  }

  li {
    font-weight: 700;
  }

  li small {
    font-weight: normal;
    display: block;
    width: calc(100%);
    margin: 0;
    margin-bottom: 3em;
    text-overflow: ellipsis;
    overflow: hidden;
    line-clamp: 1;
    background: none;
    padding: 0;
    border-radius: 0;
  }

  a {
    color: inherit;
    font-weight: 600;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }

  @media (min-width: 980px) {
    .contact {
      float: right;
      margin: 0 0 1em;
      padding-left: 2em;
    }
  }
  .intro {
    margin-bottom: 1.5em;
  }

  .contact a {
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    display: inline-block;
    padding: 0.5em 0.8em;
    border: 1px dashed;
  }
</style>
